# RepairCoin Environment Variables Example
# Copy this file to backend/.env and frontend/.env.local and fill in your values

# ============================================
# BACKEND ENVIRONMENT VARIABLES (backend/.env)
# ============================================

# Development Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=repaircoin
DB_PASSWORD=repaircoin123
DB_NAME=repaircoin

# For production, use single DATABASE_URL instead:
# DATABASE_URL=postgresql://user:pass@host:port/dbname?sslmode=require

# API Configuration
PORT=3000
JWT_SECRET=your-jwt-secret-minimum-32-characters
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,http://localhost:3003

# RCN Token (Utility Token - RepairCoin)
RCN_CONTRACT_ADDRESS=your-rcn-contract-address
RCN_THIRDWEB_CLIENT_ID=your-rcn-thirdweb-client-id
RCN_THIRDWEB_SECRET_KEY=your-rcn-thirdweb-secret-key

# RCG Token (Governance Token - RepairCoin Governance)
RCG_CONTRACT_ADDRESS=your-rcg-contract-address
RCG_THIRDWEB_CLIENT_ID=your-rcg-thirdweb-client-id
RCG_THIRDWEB_SECRET_KEY=your-rcg-thirdweb-secret-key

# Admin Configuration
ADMIN_ADDRESSES=comma,separated,admin,addresses
PRIVATE_KEY=your-admin-wallet-private-key

# Legacy Support (for backward compatibility)
THIRDWEB_CLIENT_ID=same-as-rcn-client-id
THIRDWEB_SECRET_KEY=same-as-rcn-secret-key
REPAIRCOIN_CONTRACT_ADDRESS=same-as-rcn-contract

# Token Economics
RCN_PRICE_USD=0.10
RCN_PURCHASE_PRICE=0.10
ENABLE_PUBLIC_TRADING=false
ENABLE_TRANSFERS=true
MAX_SUPPLY=unlimited

# Network Configuration
CHAIN_ID=84532
NETWORK=base-sepolia
BLOCKCHAIN_NETWORK=base-sepolia

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Features
ENABLE_SWAGGER=true
LOG_LEVEL=debug

# ================================================
# FRONTEND ENVIRONMENT VARIABLES (frontend/.env.local)
# ================================================

# RCN Token (Utility Token - RepairCoin)
NEXT_PUBLIC_RCN_CONTRACT_ADDRESS=your-rcn-contract-address
NEXT_PUBLIC_RCN_THIRDWEB_CLIENT_ID=your-rcn-client-id

# RCG Token (Governance Token - RepairCoin Governance)
NEXT_PUBLIC_RCG_CONTRACT_ADDRESS=your-rcg-contract-address
NEXT_PUBLIC_RCG_THIRDWEB_CLIENT_ID=your-rcg-client-id

# Legacy Support
NEXT_PUBLIC_CONTRACT_ADDRESS=same-as-rcn-contract
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=same-as-rcn-client-id

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=84532
NEXT_PUBLIC_NETWORK=base-sepolia

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_URL=http://localhost:3001

# App Configuration
NEXT_PUBLIC_APP_NAME=RepairCoin
NEXT_PUBLIC_APP_DESCRIPTION=Loyalty tokens for repair shops

# Admin Configuration
NEXT_PUBLIC_ADMIN_ADDRESSES=comma,separated,admin,addresses

# ============================================
# IMPORTANT SECURITY NOTES
# ============================================

# NEVER commit real values to git
# NEVER put secret keys in frontend
# ALWAYS use NEXT_PUBLIC_ prefix for frontend variables
# KEEP private keys and secret keys only in backend

# ============================================
# TOKEN CONTRACT ADDRESSES (Base Sepolia)
# ============================================

# After deployment, you'll have:
# RCN Contract: 0x... (RepairCoin utility token)
# RCG Contract: 0x... (RepairCoin Governance token)